        <summary>text color</summary>
        <description>Set text color.</description>
    </key>
    <key type="(dddd)" name="entry-text-color">
        <default>(1.,1.,1.,0.)</default>
        <summary>entry text color</summary>
        <description>Set entry text color.</description>
    </key>
